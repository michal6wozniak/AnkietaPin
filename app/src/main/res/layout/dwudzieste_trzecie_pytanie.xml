<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.user.ankieta.PytanieDwudziesteTrzecie">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23. W skali od 1 do 10 w jakim stopniu Pana/i zdaniem Gdynia jest dostosowana do potrzeb turystów?"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:textColor="@color/colorAccent"/><!--A-->

        <SeekBar
            android:id="@+id/seekBarPyt23OdpA"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:max="10"/>

        <TextView
            android:id="@+id/textViewPyt23A"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24. Proszę ocenić w skali od 1 do 10 stopień całości zadowolenia z pobytu w Gdyni"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:textColor="@color/colorAccent"/><!--A-->

        <SeekBar
            android:id="@+id/seekBarPyt23OdpB"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:max="10"/>

        <TextView
            android:id="@+id/textViewPyt23B"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25. Czy poleciłby Pan/i swoim znajomym/rodzinie odwiedzenie Gdyni?"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(W skali od 1 do 10, gdzie 1 - zdecydowanie nie, 10 - zdecydowanie tak)"
            android:textSize="14dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:gravity="left"/><!--A-->

        <SeekBar
            android:id="@+id/seekBarPyt23OdpC"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:max="10"/>

        <TextView
            android:id="@+id/textViewPyt23C"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Dalej"
            android:layout_marginTop="50dp"
            android:id="@+id/button_pyt23"
            android:textColor="@color/mainPrimaryLight"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>
